<h1>ログイン</h1>
<% if logged_in? %>
<p>ログイン済み</p>
<%= button_to "ログアウト", logout_path, method: :delete %>
<% else %>
<%= form_for(:login, url: login_path) do |f| %>
<%= f.label :email %>
<%= f.email_field :email %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "ログイン" %>
<% end %>
<% end %>

<p><%= session[:user_id] %></p>
