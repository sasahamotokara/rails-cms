<div class="l-nav js-toggle-menu__content">
<div class="l-nav__inner">
<nav class="p-nav">
<div class="p-heading-hidden">
<h2 class="p-heading-hidden__title">Site Navigation</h2>
</div><!-- /.p-heading-hidden -->

<form method="get" action="/search" class="p-form-search u-wideNone">
<div class="c-form-search">
<input type="text" name="keyword" class="c-form-search__input" placeholder="Search in site" title="Search in site">
<button type="submit" class="c-form-search__submit"><span class="u-altText">検索</span></button>
</div><!-- /.c-form-search -->
</form><!-- /.p-form-search -->

<div class="p-nav-item">
<div class="p-heading-weak">
<h2 class="p-heading-weak__title">Categories</h2>
</div><!-- /.p-heading-weak -->

<div class="p-linklist-category">
<ul class="p-linklist-category__list">
<% Category.all.each do |category| %>
<% next if category.posts.size.zero? %>
<li class="p-linklist-category__item"><span class="p-linklist-category__mark" style="background: <%= category.color %>"></span><a href="/<%= category.slug.slug %>" class="p-linklist-category__link"><%= category.name %></a></li>
<% end %>
</ul>
</div><!-- /.p-linklist-category -->
</div><!-- /.p-nav__item -->

<div class="p-nav-item">
<div class="p-heading-weak">
<h3 class="p-heading-weak__title">Tags</h3>
</div><!-- /.p-heading-weak -->

<div class="p-linklist-tag">
<ul class="p-linklist-tag__list">
<% Tag.all.each do |tag| %>
<% next if tag.posts.size == 0 %>
<li class="p-linklist-tag__item"><a href="/<%= tag.slug.slug %>" class="p-linklist-tag__link"><%= tag.name %></a></li>
<% end %>
</ul>
</div><!-- /.p-linklist-category -->
</div><!-- /.p-nav__item -->
</nav><!-- /.p-nav -->
</div><!-- /.l-nav__inner -->
</div><!-- /.l-nav -->
